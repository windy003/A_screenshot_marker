<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/toolbar_background"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- 拖动手柄 -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_drag_handle" />

    <View
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginVertical="4dp"
        android:background="#CCCCCC" />

    <ImageButton
        android:id="@+id/btnArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow"
        android:background="@drawable/btn_background"
        android:contentDescription="@string/draw_arrow"
        android:alpha="0.5" />

    <ImageButton
        android:id="@+id/btnRect"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rect"
        android:background="@drawable/btn_background"
        android:contentDescription="@string/draw_rect"
        android:alpha="0.5" />

    <View
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:background="#CCCCCC" />

    <ImageButton
        android:id="@+id/btnHide"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_hide"
        android:background="@drawable/btn_background"
        android:contentDescription="@string/hide_toolbar" />

    <ImageButton
        android:id="@+id/btnClear"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_clear"
        android:background="@drawable/btn_background"
        android:contentDescription="@string/clear" />

    <View
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:background="#CCCCCC" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/btn_background"
        android:contentDescription="@string/close" />

</LinearLayout>
